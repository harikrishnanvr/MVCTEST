@model MVCTrials.Models.Customer
<!DOCTYPE html>

<html ng-app>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.3/angular.min.js"></script>
    <title>MyInfo</title>
</head>
<body>
    <div> 
        <div class="row">
            <ul>
                <li class="list-unstyled">@Html.DisplayFor(item => item.Name)</li>
                <li class="list-unstyled">@Html.DisplayFor(item => item.Age)</li>
                <li class="list-unstyled">@Html.DisplayFor(item => item.Nationality)</li>
            </ul>
            
            <input type="text" name='@Html.NameFor(x => x.Name)' value='@Model.Name' >
            <input type="text" name='@Html.NameFor(X=>X.Age)' value="@Model.Age" />
            <input type="text" name='@Html.NameFor(X=>X.Nationality)' value="@Model.Nationality" />

            <div class="col-md-4">
                @Html.DisplayFor(item => item.Name)
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(item => item.Age)
            </div>
            <div class="col-md-4">
                @Html.DisplayFor(item => item.Nationality)
            </div>
            
         
           @*TEST GIT*@

         </div>

        <div class="form-horizontal form-group">
            <div>
                <label>Name:</label>
                <input type="text" ng-model="yourName" placeholder="Enter a name here">
                <hr>
                <h1>Hello {{yourName}}!</h1>
                </div>

            <div>
                <label>place:</label>
                <input type="text" ng-model="Place" />
                <hr />
                <h1>        destination is {{Place}}        </h1>
            </div>
          
            </div>
    </div>
</body>
</html>
